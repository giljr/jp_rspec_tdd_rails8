<%= form_with(model: customer, local: true) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "erro") %> proibiu este cliente de ser salvo:</h2>
      <ul>
        <% customer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :phone, "Telefone" %>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :smoker, "Fumante?" %><br>
    <%= f.radio_button :smoker, 'S', id: 'smoker_s' %>
    <%= f.label :smoker_s, 'Sim' %>

    <%= f.radio_button :smoker, 'N', id: 'smoker_n' %>
    <%= f.label :smoker_n, 'Não' %>
  </div>

  <div>
    <%= f.label :gender, "Gênero" %>
    <%= f.select :gender, [["Masculino", "male"], ["Feminino", "female"], ["Outro", "other"]] %>
  </div>

  <div>
    <%= f.label :avatar, "Foto do Perfil" %>
    <%= f.file_field :avatar %>
  </div>

  <div>
    <%= f.submit @customer.new_record? ? 'Criar Cliente' : 'Atualizar Cliente' %>
  </div>
<% end %>
